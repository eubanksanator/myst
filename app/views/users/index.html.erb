<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
  <p><%= button_to 'Add friend', followings_path, params: {leader_id: User.first.id, follower_id: User.last.id} %></p>
  <p><%= User.first.followers.count %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= image_tag user.own_photos.first.image, size: "50" %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
